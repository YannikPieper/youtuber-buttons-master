<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#424242">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal">

        <Button
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Zurück"
            android:id="@+id/viscabarca_zurück1"
            android:layout_gravity="right"
            android:layout_weight="31.43"
            android:background="#3F51B5"
            android:onClick="vb1_back"/>

        <Button
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Weiter"
            android:id="@+id/viscabarca_weiter1"
            android:layout_weight="31.43"
            android:background="#3F51B5"
            android:onClick="vb1_next"/>

    </LinearLayout>

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Begrüßung"
        android:id="@+id/viscabarca_b1"
        android:layout_weight="1"
        android:layout_marginTop="10dp"
        android:layout_gravity="center_horizontal"
        android:background="#2196F3"
        style="@android:style/Animation"
        android:singleLine="false"
        android:focusableInTouchMode="false"
        android:textStyle="bold|italic" />

    <Button
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:text="100er Präääzi!"
        android:id="@+id/viscabarca_b2"
        android:layout_weight="1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:layout_gravity="center_horizontal"
        android:background="#2196F3"
        android:textStyle="bold|italic" />

    <Button
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:id="@+id/viscabarca_b3"
        android:layout_weight="1"
        android:layout_marginTop="20dp"
        android:text="ViscaBarca2"
        android:layout_gravity="center_horizontal"
        android:background="#2196F3"
        android:textStyle="bold|italic" />

    <Button
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:text="ViscaBarca3"
        android:id="@+id/viscabarca_b4"
        android:layout_weight="1"
        android:layout_marginTop="20dp"
        android:layout_gravity="center_horizontal"
        android:background="#2196F3"
        android:textStyle="bold|italic" />

    <Button
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:text="ViscaBarca4"
        android:id="@+id/viscabarca_b5"
        android:layout_weight="1"
        android:layout_marginTop="20dp"
        android:layout_gravity="center_horizontal"
        android:background="#2196F3"
        android:textStyle="bold|italic" />

    <Button
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:text="ViscaBarca5"
        android:id="@+id/viscabarca_b6"
        android:layout_weight="1"
        android:layout_marginTop="20dp"
        android:layout_gravity="center_horizontal"
        android:background="#2196F3"
        android:textStyle="bold|italic"
        android:layout_marginBottom="25dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="1"
        android:id="@+id/viscabarca_Page1"
        android:layout_gravity="center_horizontal"
        android:layout_weight="1" />

</LinearLayout>