<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/codbg2">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal">

        <Button
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Zurück"
            android:id="@+id/elotrix_zurück1"
            android:layout_gravity="right"
            android:layout_weight="31.43"
            android:background="#4CAF50"
            android:onClick="is_back"
            style="@style/TextAppearance.AppCompat.Display1"
            android:textSize="20dp" />

        <Button
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Weiter"
            android:id="@+id/elotrix_weiter1"
            android:layout_weight="31.43"
            android:background="#4CAF50"
            android:onClick="is_next"
            style="@style/TextAppearance.AppCompat.Display1"
            android:textSize="20dp" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_weight="1">

        <Button
            android:layout_width="260dp"
            android:layout_height="wrap_content"
            android:text="Ereignisse"
            android:id="@+id/inscope_b1"
            android:layout_weight="7.41"
            android:layout_marginTop="20dp"
            android:background="@drawable/isbuttongo"
            style="@style/TextAppearance.AppCompat.Display1"
            android:singleLine="false"
            android:focusableInTouchMode="false"
            android:textStyle="italic"
            android:onClick="is_b1"
            android:layout_marginLeft="20dp"
            android:textSize="15dp"
            android:layout_marginRight="20dp"
            android:textColor="#F65200" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_weight="1">

        <Button
            android:layout_width="260dp"
            android:layout_height="wrap_content"
            android:text="Abgenommen!"
            android:id="@+id/inscope_b2"
            android:layout_weight="7.41"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:background="@drawable/isbuttongo"
            android:textStyle="italic"
            android:onClick="is_b2"
            android:layout_marginLeft="20dp"
            style="@style/TextAppearance.AppCompat.Display1"
            android:textSize="15dp"
            android:layout_marginRight="20dp"
            android:textColor="#F65200" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_weight="1">

        <Button
            android:layout_width="260dp"
            android:layout_height="wrap_content"
            android:id="@+id/inscope_b3"
            android:layout_weight="7.41"
            android:layout_marginTop="20dp"
            android:text="Begrüßung"
            android:background="@drawable/isbuttongo"
            android:textStyle="italic"
            android:onClick="is_b3"
            android:layout_marginLeft="20dp"
            style="@style/TextAppearance.AppCompat.Display1"
            android:textSize="15dp"
            android:layout_marginRight="20dp"
            android:textColor="#F65200" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_weight="1">

        <Button
            android:layout_width="260dp"
            android:layout_height="wrap_content"
            android:text="Englisch Speakwords V.1"
            android:id="@+id/inscope_b4"
            android:layout_weight="7.41"
            android:layout_marginTop="20dp"
            android:background="@drawable/isbuttongo"
            android:textStyle="italic"
            android:onClick="is_b4"
            android:layout_marginLeft="20dp"
            style="@style/TextAppearance.AppCompat.Display1"
            android:textSize="15dp"
            android:layout_marginRight="20dp"
            android:textColor="#F65200" />


    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_weight="1">

        <Button
            android:layout_width="260dp"
            android:layout_height="wrap_content"
            android:text="Wenn der Punkt erreicht ist"
            android:id="@+id/inscope_b5"
            android:layout_weight="7.41"
            android:layout_marginTop="20dp"
            android:background="@drawable/isbuttongo"
            android:textStyle="italic"
            android:onClick="is_b5"
            android:layout_marginLeft="20dp"
            style="@style/TextAppearance.AppCompat.Display1"
            android:textSize="15dp"
            android:layout_marginRight="20dp"
            android:textColor="#F65200" />


    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_weight="1">

        <Button
            android:layout_width="260dp"
            android:layout_height="wrap_content"
            android:text="Das Ergebniss"
            android:id="@+id/inscope_b6"
            android:layout_weight="7.41"
            android:layout_marginTop="20dp"
            android:background="@drawable/isbuttongo"
            android:textStyle="italic"
            android:layout_marginBottom="20dp"
            android:onClick="is_b6"
            android:layout_marginLeft="20dp"
            style="@style/TextAppearance.AppCompat.Display1"
            android:textSize="15dp"
            android:layout_marginRight="20dp"
            android:textColor="#F65200" />

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="1"
        android:id="@+id/inscope_Page1"
        android:layout_gravity="center_horizontal"
        android:layout_weight="1"
        android:textColor="#787878"
        android:textStyle="bold" />

</LinearLayout>