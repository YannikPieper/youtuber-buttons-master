<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">

    <Button
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:text="Rumble "
        android:id="@+id/rumbleWidget"
        android:layout_gravity="center_horizontal"
        style="@style/TextAppearance.AppCompat.Display1"
        android:background="@drawable/rumblebutton"
        android:textSize="20dp"
        android:layout_centerHorizontal="true"
        android:textColor="#000000"
        android:layout_weight="1"
        android:layout_marginRight="20dp" />

    <ImageButton
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/advWidget"
        android:layout_alignBottom="@+id/rumbleWidget"
        android:layout_toRightOf="@+id/rumbleWidget"
        android:layout_toEndOf="@+id/rumbleWidget"
        android:background="@drawable/christmas_tree" />

    </LinearLayout>

</LinearLayout>