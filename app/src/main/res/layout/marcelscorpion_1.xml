<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#424242">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal">

        <Button
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Zur端ck"
            android:id="@+id/marcelscorpion_zur端ck1"
            android:layout_gravity="right"
            android:layout_weight="31.43"
            android:background="#B71C1C"
            android:onClick="ms1_back" />

        <Button
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Weiter"
            android:id="@+id/marcelscorpion_weiter1"
            android:layout_weight="31.43"
            android:background="#B71C1C"
            android:onClick="ms1_next"/>

    </LinearLayout>

    <Button
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:text="Es connected kein Schuss"
        android:id="@+id/marcelscorpion_b1"
        android:layout_weight="1"
        android:layout_marginTop="10dp"
        android:layout_gravity="center_horizontal"
        android:background="#EF5350"
        style="@android:style/Animation"
        android:singleLine="false"
        android:focusableInTouchMode="false"
        android:textStyle="bold|italic"
        android:onClick="ms_b1"/>

    <Button
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:text="Wer ist der Beste"
        android:id="@+id/marcelscorpion_b2"
        android:layout_weight="1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:layout_gravity="center_horizontal"
        android:background="#EF5350"
        android:textStyle="bold|italic"
        android:onClick="ms_b2"/>

    <Button
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:id="@+id/marcelscorpion_b3"
        android:layout_weight="1"
        android:layout_marginTop="20dp"
        android:text="Eins Vor!"
        android:layout_gravity="center_horizontal"
        android:background="#EF5350"
        android:textStyle="bold|italic"
        android:onClick="ms_b3"/>

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Der Frechdachs"
        android:id="@+id/marcelscorpion_b4"
        android:layout_weight="1"
        android:layout_marginTop="20dp"
        android:layout_gravity="center_horizontal"
        android:background="#EF5350"
        android:textStyle="bold|italic"
        android:onClick="ms_b4"/>

    <Button
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:text="Marcel ist verr端ckt V.1"
        android:id="@+id/marcelscorpion_b5"
        android:layout_weight="1"
        android:layout_marginTop="20dp"
        android:layout_gravity="center_horizontal"
        android:background="#EF5350"
        android:textStyle="bold|italic"
        android:onClick="ms_b5"/>

    <Button
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:text="Marcel ist verr端ckt V.2"
        android:id="@+id/marcelscorpion_b6"
        android:layout_weight="1"
        android:layout_marginTop="20dp"
        android:layout_gravity="center_horizontal"
        android:background="#EF5350"
        android:textStyle="bold|italic"
        android:layout_marginBottom="25dp"
        android:onClick="ms_b6"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="1"
        android:id="@+id/marcelscorpion_page1"
        android:layout_gravity="center_horizontal"
        android:layout_weight="1" />

</LinearLayout>