<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:orientation="vertical"
    android:background="#424242"
    android:id="@+id/ytlist">


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/yt_icon"
            android:src="@drawable/msicon"/>

        <Button
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:text="Marcelscorpion Sounds"
            android:id="@+id/sounds"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="25dp"
            android:background="#B71C1C"
            android:onClick="sounds"
            android:textSize="15dp"
            style="@style/TextAppearance.AppCompat.Display1" />

    </LinearLayout>

    <Button
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:text="Rumble "
        android:id="@+id/button2"
        android:layout_gravity="center_horizontal"
        style="@style/TextAppearance.AppCompat.Display1"
        android:layout_marginTop="30dp"
        android:background="@drawable/rumblebutton"
        android:textSize="20dp"
        android:onClick="rumble"/>

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="MarcelScorpion"
        android:id="@+id/marcelscorpion"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_weight="1"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/mainbutton"
        style="@style/TextAppearance.AppCompat.Display1"
        android:layout_marginTop="30dp"
        android:onClick="ms"
        android:textSize="30dp" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_gravity="center_horizontal"
        android:layout_weight="1" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="MontanaBlack"
        android:id="@+id/montanablack"
        android:layout_below="@+id/montanablack"
        android:layout_centerHorizontal="true"
        android:layout_weight="1"
        android:layout_gravity="center_horizontal"
        style="@style/TextAppearance.AppCompat.Display1"
        android:background="@drawable/mainbutton"
        android:onClick="mb"
        android:textSize="30dp" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_gravity="center_horizontal"
        android:layout_weight="1" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="ViscaBarca"
        android:id="@+id/viscabarca"
        android:layout_below="@+id/button2"
        android:layout_centerHorizontal="true"
        android:layout_weight="1"
        android:layout_gravity="center_horizontal"
        style="@style/TextAppearance.AppCompat.Display1"
        android:background="@drawable/mainbutton"
        android:onClick="vb"
        android:textSize="30dp" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_gravity="center_horizontal"
        android:layout_weight="1" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Inscope21"
        android:id="@+id/inscope"
        android:layout_below="@+id/button3"
        android:layout_centerHorizontal="true"
        android:layout_weight="1"
        android:layout_gravity="center_horizontal"
        style="@style/TextAppearance.AppCompat.Display1"
        android:background="@drawable/mainbutton"
        android:onClick="is"
        android:textSize="30dp" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_gravity="center_horizontal"
        android:layout_weight="1" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="E IL o T IR i X"
        android:id="@+id/elotrix"
        android:layout_below="@+id/button4"
        android:layout_alignLeft="@+id/button4"
        android:layout_alignStart="@+id/button4"
        android:layout_weight="1"
        android:layout_gravity="center_horizontal"
        style="@style/TextAppearance.AppCompat.Display1"
        android:background="@drawable/mainbutton"
        android:onClick="et"
        android:textSize="30dp" />
</LinearLayout>
