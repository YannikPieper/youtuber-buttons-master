<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#424242">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal">

        <Button
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Zurück"
            android:id="@+id/elotrix_zurück1"
            android:layout_gravity="right"
            android:layout_weight="31.43"
            android:background="#FF9800"
            android:onClick="et1_back"/>

        <Button
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Weiter"
            android:id="@+id/elotrix_weiter1"
            android:layout_weight="31.43"
            android:background="#FF9800"
            android:onClick="et1_next"/>

    </LinearLayout>

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Begrüßung"
        android:id="@+id/elotrix_b1"
        android:layout_weight="1"
        android:layout_marginTop="10dp"
        android:layout_gravity="center_horizontal"
        android:background="#FFC107"
        style="@android:style/Animation"
        android:singleLine="false"
        android:focusableInTouchMode="false"
        android:textStyle="bold|italic" />

    <Button
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:text="Oh Nein!"
        android:id="@+id/elotrix_b2"
        android:layout_weight="1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:layout_gravity="center_horizontal"
        android:background="#FFC107"
        android:textStyle="bold|italic" />

    <Button
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:id="@+id/elotrix_b3"
        android:layout_weight="1"
        android:layout_marginTop="20dp"
        android:text="Elotrix3"
        android:layout_gravity="center_horizontal"
        android:background="#FFC107"
        android:textStyle="bold|italic" />

    <Button
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:text="Elotrix4"
        android:id="@+id/elotrix_b4"
        android:layout_weight="1"
        android:layout_marginTop="20dp"
        android:layout_gravity="center_horizontal"
        android:background="#FFC107"
        android:textStyle="bold|italic" />

    <Button
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:text="Elotrix5"
        android:id="@+id/elotrix_b5"
        android:layout_weight="1"
        android:layout_marginTop="20dp"
        android:layout_gravity="center_horizontal"
        android:background="#FFC107"
        android:textStyle="bold|italic" />

    <Button
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:text="Elotrix6"
        android:id="@+id/elotrix_b6"
        android:layout_weight="1"
        android:layout_marginTop="20dp"
        android:layout_gravity="center_horizontal"
        android:background="#FFC107"
        android:textStyle="bold|italic"
        android:layout_marginBottom="25dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="1"
        android:id="@+id/elotrix_Page1"
        android:layout_gravity="center_horizontal"
        android:layout_weight="1" />

</LinearLayout>