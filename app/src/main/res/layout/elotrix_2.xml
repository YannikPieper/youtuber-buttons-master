<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#424242">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal">

        <Button
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Zurück"
            android:id="@+id/elotrix_zurück1"
            android:layout_gravity="right"
            android:layout_weight="31.43"
            android:background="#FF9800"
            android:onClick="et2_back"
            style="@style/TextAppearance.AppCompat.Display1"
            android:textSize="20dp" />

        <Button
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Weiter"
            android:id="@+id/elotrix_weiter1"
            android:layout_weight="31.43"
            android:background="#FF9800"
            android:onClick="et2_next"
            style="@style/TextAppearance.AppCompat.Display1"
            android:textSize="20dp" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_weight="1">

        <Button
            android:layout_width="260dp"
            android:layout_height="wrap_content"
            android:text="du Huansohn V.1"
            android:id="@+id/elotrix_b1"
            android:layout_weight="31.43"
            android:layout_marginTop="20dp"
            android:background="#FFC107"
            style="@style/TextAppearance.AppCompat.Display1"
            android:singleLine="false"
            android:focusableInTouchMode="false"
            android:textStyle="bold|italic"
            android:onClick="et_b7"
            android:layout_marginLeft="20dp"
            android:textSize="15dp" />

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/checkBox7"
            android:layout_weight="31.43"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_weight="1">

        <Button
            android:layout_width="260dp"
            android:layout_height="wrap_content"
            android:text="Du Huansohn V.2"
            android:id="@+id/elotrix_b2"
            android:layout_weight="31.43"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:background="#FFC107"
            android:textStyle="bold|italic"
            android:onClick="et_b8"
            android:layout_marginLeft="20dp"
            style="@style/TextAppearance.AppCompat.Display1"
            android:textSize="15dp" />

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/checkBox8"
            android:layout_weight="31.43"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:checked="false" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_weight="1">

        <Button
            android:layout_width="260dp"
            android:layout_height="wrap_content"
            android:id="@+id/elotrix_b3"
            android:layout_weight="31.43"
            android:layout_marginTop="20dp"
            android:text="Du Huansohn V.3"
            android:background="#FFC107"
            android:textStyle="bold|italic"
            android:onClick="et_b9"
            android:layout_marginLeft="20dp"
            style="@style/TextAppearance.AppCompat.Display1"
            android:textSize="15dp" />

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/checkBox9"
            android:layout_weight="31.43"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_weight="1">

        <Button
            android:layout_width="260dp"
            android:layout_height="wrap_content"
            android:text="Du Huansohn V.4"
            android:id="@+id/elotrix_b4"
            android:layout_weight="31.43"
            android:layout_marginTop="20dp"
            android:background="#FFC107"
            android:textStyle="bold|italic"
            android:onClick="et_b10"
            android:layout_marginLeft="20dp"
            style="@style/TextAppearance.AppCompat.Display1"
            android:textSize="15dp" />

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/checkBox10"
            android:layout_weight="31.43"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_weight="1">

        <Button
            android:layout_width="260dp"
            android:layout_height="wrap_content"
            android:text="Hier wirst du eh nur..."
            android:id="@+id/elotrix_b5"
            android:layout_weight="31.43"
            android:layout_marginTop="20dp"
            android:background="#FFC107"
            android:textStyle="bold|italic"
            android:onClick="et_b11"
            android:layout_marginLeft="20dp"
            style="@style/TextAppearance.AppCompat.Display1"
            android:textSize="15dp" />

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/checkBox11"
            android:layout_weight="31.43"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_weight="1">

        <Button
            android:layout_width="260dp"
            android:layout_height="wrap_content"
            android:text="Er ist wieder in der Lobby!"
            android:id="@+id/elotrix_b6"
            android:layout_weight="31.43"
            android:layout_marginTop="20dp"
            android:background="#FFC107"
            android:textStyle="bold|italic"
            android:layout_marginBottom="25dp"
            android:onClick="et_b12"
            android:layout_marginLeft="20dp"
            style="@style/TextAppearance.AppCompat.Display1"
            android:textSize="15dp" />

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/checkBox12"
            android:layout_weight="31.43"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp" />

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="2"
        android:id="@+id/elotrix_Page2"
        android:layout_gravity="center_horizontal"
        android:layout_weight="1" />

</LinearLayout>