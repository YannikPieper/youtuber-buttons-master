<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dust1">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:weightSum="1">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/twitter"
            android:id="@+id/twitter"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="twitter.com/EasterEggDev"
            android:id="@+id/button13"
            android:background="@drawable/twitterbtn"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            style="@style/TextAppearance.AppCompat.Display1"
            android:textSize="14dp"
            android:onClick="twitter"
            android:textColor="#F65200" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/fb"
            android:id="@+id/facebook"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="facebook.com/eastereggdev"
            android:id="@+id/button14"
            android:background="@drawable/fbbuttongo"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            style="@style/TextAppearance.AppCompat.Display1"
            android:textSize="14dp"
            android:onClick="facebook"
            android:textColor="#F65200" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/homepage"
            android:id="@+id/homepage"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="eastereggdevelopment.com"
            android:id="@+id/button15"
            android:background="@drawable/homepagebtn"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            style="@style/TextAppearance.AppCompat.Display1"
            android:textSize="14dp"
            android:onClick="website"
            android:textColor="#F65200" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/email"
            android:id="@+id/email"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Eastereggdev@gmail.com"
            android:id="@+id/button16"
            android:background="@drawable/emailbtn"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            style="@style/TextAppearance.AppCompat.Display1"
            android:textSize="14dp"
            android:textColor="#F65200" />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Wir sind Easter Egg Development!"
        android:id="@+id/textView"
        android:layout_gravity="center_horizontal"
        style="@style/TextAppearance.AppCompat.Display1"
        android:textSize="25dp"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:gravity="center_horizontal"
        android:textColor="#F65200"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Du willst mehr Ã¼ber uns erfahren? Dann folge uns doch einfach auf den Social Media Plattformen!"
        android:id="@+id/textView5"
        android:layout_gravity="center_horizontal"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:gravity="center_horizontal"
        android:textSize="20dp"
        android:textColor="#F65200"
        android:textStyle="italic" />

</LinearLayout>