<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="6dip" android:color="#FFFFFF" />
            <gradient android:angle="-90" android:startColor="#B71C1C" android:endColor="#EF5350"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="6dip" android:color="#FFFFFF" />
            <solid android:color="#EF5350"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="6dip" android:color="#FFFFFF" />
            <gradient android:angle="-90" android:startColor="#EF5350" android:endColor="#B71C1C" />
        </shape>
    </item>
</selector>